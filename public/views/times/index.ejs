<%- include('../partials/header', {css: 'teams', js: "search", title: "Times"}) %>

<body>
    <%- include('../partials/navbar', {active: 1, page: "logado"}) %>

    <div class="h-screen">
        <h2>Seus times</h2>
        <input class="search" type="text" placeholder="Pesquisar">
        <div class="teams">
            <a href="/times/registrar" class="register-team">Registrar time</a>

            <% times.forEach(time => { %>
            <div class="team">
                <div>
                    <h3><%= time.nome %></h3>
                    <span><%= time.cidade %></span>
                    <p>
                        Jogadores: <%= time.jogadores.length %><br/>
                        Técnico: <%= time.tecnico %><br/>
                        Fundação: <%= time.fundacao %>
                    </p>
                    <a href="/times/<%= time.id %>/jogadores">Ver jogadores</a>
                </div>

                <img src="/assets/team_icon.svg" alt="Imagem de um time de futebol">

                <div class="manage">
                    <a href="/times/<%= time.id %>/editar" class="gear">
                        <svg width="25" height="22" ...> <!-- mantém igual -->
                        </svg>
                    </a>

                    <a href="/times/<%= time.id %>/deletar" class="trash">
                        <svg width="20" height="20" ...> <!-- mantém igual -->
                        </svg>
                    </a>
                </div>
            </div>
            <% }) %>

        </div>
    </div>
</body>
</html>

